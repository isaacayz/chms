@model System.Collections.Generic.IEnumerable<Chms.Data.Models.Member>
@using Chms.Data.Models

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    @{ 
//Member memberDetails = (Member)ViewBag.MemberDetails;
    }
    <h4>Member</h4>
    <hr />
    <table class="table table-striped table-bordered table-hover dt-responsive">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Sex </th>
                <th>Phone</th>
                <th>Address</th>
                <th>Date of Birth</th>
                <th>Email</th>
                <th>Anniversary</th>
                @*<th>@memberDetails.DOB</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td class="hidden">@item.Id</td>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.Sex
                </td>
                <td>
                    @item.PhoneNumber
                </td>
                <td>
                    @item.Address
                </td>
                <td>
                    @item.DOB
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Anniversary
                    @if (@item.Anniversary.ToString() == DateTime.Now.ToString())
                    {
                        Console.WriteLine("Happy Wedding Anniversary");
                    }
                </td>
            </tr>

            }
        </tbody>
    </table>
</div>
<p>
    @*@Html.ActionLink("Edit", "EditMember", new { id = Model.Id }) |*@
    @Html.ActionLink("Back to List", "Index")
</p>
